{% extends 'base.html.twig' %}


{% block body %}

    <div class="jumbotron" id="tamer">
        <h1 style="text-align: center">Atelier</h1>
    </div>

    <div class="row flex" style="width: 100%" >
        {% for artwork in artworks %}
            <div class="col-xl-4" >
                        <div class="container" id="miniature">
                            {% if artwork.filename %}
                                <a class="miniature" href="{{ path('shop.show', {id:artwork.id, slug: artwork.slug})}}">
                                    <span class="bg"></span>
                                    <span class="titre">{{ artwork.nom }}</span>
                                    <span class="description">{{ artwork.description }}</span>
                                    <img class="card-img-top" src="{{ vich_uploader_asset(artwork, 'imageFile') }}"
                                         alt="card-img-top" style="width: 380px;height: 550px;" >
                                </a>
                            {% endif %}
                        </div>
            </div>
        {%  endfor %}
    </div>
    <div class="pagination" style="justify-content: center" >
        {{ knp_pagination_render(artworks) }}
    </div>

{% endblock %}